            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <us:BindableRichTextBox Grid.Column="0"
                         Padding="3"
                         VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Auto"    
                         UndoLimit="0"
                         Document="{Binding FlowDoc}"/>

